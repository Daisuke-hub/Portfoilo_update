<div id="top_back_image">
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-2 col-xs-8">
          <div id="top_back">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              
                  <div class="title">ニックネーム</div>
                  <div class="field">
                    <%= f.text_field :name, autofocus: true %>
                  </div>

                  <div class="field">
                  <div class="title">メールアドレス</div>
                    <%= f.text_field :email %>
                  </div>

                  <div class="field">
                  <div class="title">パスワード</div>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.text_field :password %>
                  </div>

                  <p>
                    <div class="field">
                      <div class="title">パスワード(確認用)</div>
                      <%= f.text_field :password_confirmation %>
                    </div>
                  </p>

                  <p><%= f.submit "新規登録", class:"btn btn-primary" %></p>
            <% end %>

            <%- if controller_name != 'sessions' %>
              <%= link_to "ログイン", new_session_path(resource_name) %><br />
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>