<!DOCTYPE html>
<html>
  <head>
    <title>Session</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container">
          <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
              <div class="navbar-header">
                <%= link_to "SESSION", about_path, class:"session"%>
              </div>
              <% if user_signed_in? %>
                <div>
                  <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "メンバー検索", users_path %></li>
                    <li><%= link_to "マイページ", user_path(current_user.id) %></li>
                    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                  </ul>
                </div>
              <% else %>
                <ul class="nav navbar-nav navbar-right">
                  <li><%= link_to "メンバー検索", users_path %></li>
                  <li><%= link_to "新規登録", new_user_registration_path %></li>
                  <li><%= link_to "ログイン", new_user_session_path %></li>
                </ul>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
      <div class="current_user_back">
        <div class="current_user">
          <div class="container">
            <div class="row">
              <div class="col-xs-8 col-xs-offset-2">
                <% if user_signed_in? %>
                  <div><%= current_user.name %>さんがログイン中</div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    <div id="page_top">ページトップに戻る</div>
    <%= yield %>
  </body>
</html>
