<ul id="message">
    <% @messages.each do |message| %>
        <% if message.user_id == current_user.id %>
            <div>
                <li class="message">
                    <span class="image">
                        <%= attachment_image_tag(message.user, :user_image, :fill, 40, 40, fallback: "no_image.jpg")%>
                    </span>
                    <span id="balloon">
                    <%= message.content %>
                    </span>
                </li>
            </div>
        <% else%>
            <div class="receive_message">
                <li class="message">
                    <span class="image">
                        <%= attachment_image_tag(message.user, :user_image, :fill, 40, 40, fallback: "no_image.jpg")%>
                    </span>
                    <span id="balloon">
                        <%= message.content %>
                    </span>
                </li>
            </div>
        <% end %>
    <% end %>
</ul>